<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_contenido_comentarios_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_contenido_comentarios_relativeLayout" />

    <RelativeLayout
        android:id="@+id/fragment_contenido_comentarios_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <EditText
            android:id="@+id/fragment_contenido_comentarios_editText_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="4dp"
            android:layout_toLeftOf="@+id/fragment_contenido_comentarios_floatingActionButton"
            android:background="@color/transparent"
            android:hint="Escribe un comentario"
            android:maxLines="6"
            android:padding="8dp"
            android:paddingHorizontal="4dp"
            android:textSize="15dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fragment_contenido_comentarios_floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_menu_send" />

    </RelativeLayout>

</RelativeLayout>
