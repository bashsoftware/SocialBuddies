<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="1dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/fragment_registro_problema_button_seleccionar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona..."
                    android:textAllCaps="false" />

                <EditText
                    android:id="@+id/fragment_registro_problema_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Titulo"
                    android:lines="1" />

                <EditText
                    android:id="@+id/fragment_registro_problema_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripcion"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="2" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_registro_problema_imagnes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_registro_problema_imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃ±adir Imagenes" />

            <Button
                android:id="@+id/fragment_registro_problema_coordenadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dar Posicion" />

            <Button
                android:id="@+id/fragment_registro_problema_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>