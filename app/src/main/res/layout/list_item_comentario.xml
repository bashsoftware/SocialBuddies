<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/list_item_comentario_imageView_fotoPerfil"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_comentario_button_meGusta"
        android:layout_toRightOf="@+id/list_item_comentario_imageView_fotoPerfil"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_comentario_textview_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/roboto"
            android:text="Nombre:"
            android:textColor="@color/primaryText"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/list_item_comentario_textview_contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/roboto"
            android:text="@string/medium_text"
            android:textColor="@color/primaryText"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_comentario_textview_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/roboto"
                android:text="Hace 4h"
                android:textColor="@color/secondaryText"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/list_item_comentario_textview_numMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/roboto"
                android:text="Hace 4h"
                android:textColor="@color/secondaryText"
                android:textSize="14dp" />

        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/list_item_comentario_button_meGusta"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_like_border"
        android:tint="@color/colorAccent" />

</RelativeLayout>